# Database Configuration
DATABASE_URL=postgresql://emailuser:emailpass@postgres:5432/email_filter

# Qdrant Vector Database
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=your_qdrant_api_key_optional
QDRANT_COLLECTION_NAME=email-embeddings

# Redis Configuration
REDIS_URL=redis://redis:6379

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Email Configuration
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REDIRECT_URI=http://localhost:3000/auth/callback

# Application Settings
NODE_ENV=production
PORT=3000
SESSION_SECRET=your_session_secret_here

# ML Model Settings
PROTOTYPE_HIGH_THRESHOLD=0.6
PROTOTYPE_LOW_THRESHOLD=0.5

# Digest Settings
DIGEST_ENABLED=true
DIGEST_SCHEDULE=0 9 * * *  # Daily at 9 AM

# Logging
LOG_LEVEL=info
